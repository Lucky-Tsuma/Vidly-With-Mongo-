{
    "env": {
        "node": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "ignorePatterns": ["*.json", "README.md", "readme.txt", "*.pdf", "logfile.log"],
    "rules": {
        "semi": ["error", "never"],
        "quotes": ["error", "double"]
    }
}
